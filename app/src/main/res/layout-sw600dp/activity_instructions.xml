<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:orientation="horizontal"
    android:background="@color/colorBackgroundLayouts">

    <FrameLayout
        android:id="@+id/fragment_container"
        android:name="com.example.bakingapp.StepsListFragment"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent" />

    <View
        android:layout_width="@dimen/width_height_1dp"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/standard_margin"
        android:layout_marginBottom="@dimen/standard_margin"
        android:background="@android:color/darker_gray" />

    <FrameLayout
        android:id="@+id/step_instructions"
        android:name="com.example.bakingapp.PresentsStepFragment"
        android:layout_width="0dp"
        android:layout_weight="1.5"
        android:layout_height="match_parent" />

</LinearLayout>