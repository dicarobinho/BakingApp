<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/width_height_250dp"
    android:layout_gravity="center_horizontal"
    android:layout_margin="@dimen/half_standard_margin"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="@dimen/half_standard_margin"
    app:cardElevation="@dimen/half_standard_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/recipe_general_image"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            android:src="@drawable/test_image"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/recipe_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_white"
            android:ellipsize="end"
            android:gravity="start"
            android:maxLines="1"
            android:paddingStart="@dimen/standard_margin"
            android:paddingEnd="@dimen/standard_margin"
            android:textColor="@color/color_orange"
            android:textSize="@dimen/text_size_30sp"
            android:textStyle="bold"
            tools:text="Nutella Pie" />

        <TextView
            android:id="@+id/recipe_servings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_white"
            android:ellipsize="end"
            android:gravity="end"
            android:maxLines="1"
            android:paddingStart="@dimen/standard_margin"
            android:paddingEnd="@dimen/standard_margin"
            android:paddingBottom="@dimen/half_half_standard_margin"
            android:textColor="@color/color_orangev2"
            android:textSize="@dimen/text_size_24sp"
            android:textStyle="bold"
            tools:ignore="RelativeOverlap"
            tools:text="Servings: 8" />
    </LinearLayout>

</androidx.cardview.widget.CardView>